<Window x:Class="Lab10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab10"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="31,76,0,0" VerticalAlignment="Top" Height="17" Width="77"/>
        <CheckBox Content="CheckBox" Margin="154,77,569,338" RenderTransformOrigin="0.5,0.5">
            <CheckBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.511"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.491"/>
                </TransformGroup>
            </CheckBox.RenderTransform>
        </CheckBox>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,98,519,32"/>
        <Label Content="Account Details" Margin="374,76,337,327"/>
        <Label Content="First Name" HorizontalAlignment="Center" Margin="0,112,0,0" VerticalAlignment="Top" Height="29" Width="80"/>
        <Label Content="Last Name" HorizontalAlignment="Center" Margin="0,146,0,0" VerticalAlignment="Top" Height="29" Width="80"/>
        <Label Content="Balance" HorizontalAlignment="Center" Margin="0,199,0,0" VerticalAlignment="Top" Height="29" Width="80"/>
        <Label Content="Account type" HorizontalAlignment="Center" Margin="0,232,0,0" VerticalAlignment="Top" Height="29" Width="80"/>
        <Label Content="Balance" HorizontalAlignment="Center" Margin="0,266,0,0" VerticalAlignment="Top" Height="29" Width="80"/>
        <Label Content="Interest Rate" HorizontalAlignment="Center" Margin="0,300,0,0" VerticalAlignment="Top" Height="29" Width="80"/>
        <Label Content="Transaction Amount" HorizontalAlignment="Center" Margin="0,348,0,0" VerticalAlignment="Top" Height="29" Width="126"/>
        <TextBlock x:Name="tblkFirstName" HorizontalAlignment="Left" Margin="491,119,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock x:Name="tblkLastName" HorizontalAlignment="Left" Margin="491,153,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock x:Name="tblkBalance" HorizontalAlignment="Left" Margin="491,206,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

    </Grid>
</Window>
